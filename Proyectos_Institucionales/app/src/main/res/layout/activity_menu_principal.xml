<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/findototal"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="Bienvenido : "
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:paddingLeft="30dp"/>


        <TextView
            android:id="@+id/txtNombrePersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:text="Nombre Persona "
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:paddingLeft="20dp"/>

        <Button
            android:id="@+id/btnMisProyectos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_redondeado_blanco"
            android:onClick="misProyectos"
            android:text="proyectos que dirijo"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/btnIniciar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_redondeado_blanco"
            android:onClick="proyectosQueHagoParte"
            android:text="Proyectos que Hago Parte"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_redondeado_blanco"
            android:onClick="editarDatos"
            android:text="Modificar Perfil"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_redondeado_blanco"
            android:onClick="salir"
            android:text="Salir"
            android:textColor="@color/white"/>




    </LinearLayout>
</RelativeLayout>