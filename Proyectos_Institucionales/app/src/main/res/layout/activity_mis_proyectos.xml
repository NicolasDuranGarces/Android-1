<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".misProyectos">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/findototal"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:text="Mis Proyectos"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:paddingLeft="50dp"/>

        <ListView
            android:id="@+id/listaProyectos"
            android:layout_width="match_parent"
            android:layout_height="515dp"
            android:layout_marginBottom="20dp">

        </ListView>

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_redondeado_blanco"
            android:elevation="5dp"
            android:onClick="crearProyecto"
            android:text="Crear Un Proyecto"

            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_redondeado_blanco"
            android:elevation="5dp"
            android:onClick="crearProyecto"
            android:text="Regresar"

            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>