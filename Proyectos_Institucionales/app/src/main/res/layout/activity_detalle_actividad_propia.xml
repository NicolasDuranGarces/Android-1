<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleActividadPropia">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/findototal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNomnbreActividadD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Bienvenido : "
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/txtDescripcionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Bienvenido : "
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/txtFechaInicioActividadD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Bienvenido : "
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/txtFechaFinActividadD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Bienvenido : "
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/txtResponsableD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:text="Bienvenido : "
            android:textColor="@color/blue"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtPorcentajeDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:text="Bienvenido : "
            android:textColor="@color/blue"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_redondeado_blanco"
            android:text="Eliminar Actividad"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnModificarActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_redondeado_blanco"
            android:onClick="modificarDatos"
            android:text="Modificar Actividad"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/btnListarTareas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_redondeado_blanco"
            android:onClick="listarTareas"
            android:text="Listar Tareas"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/btnMisProyectos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_redondeado_blanco"
            android:onClick="regresar"
            android:text="Regresar"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>