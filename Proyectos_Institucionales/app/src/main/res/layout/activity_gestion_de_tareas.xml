<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestionDeTareas">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/findototal"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombrePersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Registro Tarea"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/txtNombreTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Nombre TArea"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <EditText
            android:id="@+id/txtDescripcionTarea"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:background="@drawable/inputarea"
            android:ems="10"
            android:hint="Descripcion"
            android:inputType="text|textMultiLine"
            android:padding="10dp"
            android:gravity="top"/>



        <EditText
            android:id="@+id/txtFechaIniciotarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Fecha de Inicio"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <EditText
            android:id="@+id/txtFechaFinTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Fecha Fin Actividad"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <EditText
            android:id="@+id/porcentaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:autofillHints=""
            android:background="@drawable/input"
            android:ems="10"
            android:hint="% Tarea"
            android:inputType="number"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />


        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_redondeado_blanco"

            android:onClick="registrar"
            android:text="Guardar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnActilizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_redondeado_blanco"

            android:onClick="actualizarDatos"
            android:text="actualizar datos"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/registrar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_redondeado_blanco"
            android:onClick="regresar"
            android:text="Regresar"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>